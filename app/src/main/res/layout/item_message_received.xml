<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp">

    <ImageView
        android:visibility="gone"
        android:id="@+id/image_message_profile"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <expansion.neto.com.mx.jefeapp.utils.font.RobotoTextView
        android:visibility="gone"
        android:id="@+id/text_message_name"
        android:text="Expansion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        app:typeface="robotoLight"
        android:textColor="@color/azultaco"
        app:layout_constraintLeft_toRightOf="@+id/image_message_profile"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="2dp" />

    <expansion.neto.com.mx.jefeapp.utils.font.RobotoTextView
        android:id="@+id/text_message_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_rectangle_received"
        android:maxWidth="240dp"
        android:padding="8dp"
        android:text="-"
        android:layout_marginBottom="12dp"
        android:textColor="@color/azultaco"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_message_profile"
        app:typeface="robotoLight" />

    <expansion.neto.com.mx.jefeapp.utils.font.RobotoTextView
        android:id="@+id/text_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:text="11:40"
        app:typeface="robotoLight"
        android:textColor="@color/azultaco"
        android:textSize="7sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_message_body" />

</android.support.constraint.ConstraintLayout>