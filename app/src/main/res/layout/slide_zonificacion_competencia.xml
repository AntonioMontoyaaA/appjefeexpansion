<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/content_slide_up_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:paddingLeft="18dp"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/fragment_autoriza_3">

        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:background="@color/blanco"
            android:id="@+id/slideView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp">


            <expansion.neto.com.mx.jefeapp.utils.font.RobotoTextView
                android:id="@+id/competencias"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="@string/competencia"
                android:textColor="@color/azultaco"
                android:textSize="14sp"
                app:typeface="robotoBold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/content_lista"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <expansion.neto.com.mx.jefeapp.utils.font.RobotoTextView
                android:id="@+id/neto"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="@string/competencia_neto"
                android:textColor="@color/azultaco"
                android:textSize="14sp"
                app:typeface="robotoBold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/content_lista_tienda"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>



        </LinearLayout>

    </LinearLayout>
</layout>