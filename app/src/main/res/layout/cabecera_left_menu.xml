<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ctl_cabecera_menu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/azultaco"
    android:orientation="horizontal"
    android:padding="0dp">

    <ImageView
        android:id="@+id/img_user_photo"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:padding="1dp"
        android:background="@drawable/logoblanco"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp" />


    <expansion.neto.com.mx.jefeapp.utils.font.RobotoTextView
        android:id="@+id/txt_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="16dp"
        android:textColor="@color/blanco"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/img_user_photo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_user_photo"
        app:typeface="robotoLight"
        tools:layout_constraintLeft_creator="1"
        tools:layout_conversion_absoluteHeight="16dp"
        tools:layout_conversion_absoluteWidth="51dp"
        tools:layout_conversion_absoluteX="146dp"
        tools:layout_conversion_absoluteY="35dp"
        tools:text="@string/nombreUsuario" />

<!-- android:text="@string/accion_ver"  -->
    <expansion.neto.com.mx.jefeapp.utils.font.RobotoTextView
        android:id="@+id/txt_app_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="8dp"

        android:textColor="@color/blanco"
        android:textSize="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:typeface="robotoLight"
        tools:layout_constraintRight_creator="1"
        tools:layout_conversion_absoluteHeight="12dp"
        tools:layout_conversion_absoluteWidth="44dp"
        tools:layout_conversion_absoluteX="265dp"
        tools:layout_conversion_absoluteY="58dp" />


</android.support.constraint.ConstraintLayout>