<?xml version="1.0" encoding="utf-8"?>
<layout

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_autoriza"
            />


        <ScrollView
            android:background="@drawable/background"
            android:id="@+id/scroll_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:background="@drawable/background"
                    android:layout_marginTop="2dp"
                    android:padding="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="610dp"
                    android:orientation="horizontal">

                    <android.support.constraint.ConstraintLayout
                        android:orientation="horizontal"
                        android:background="@drawable/estilo_boton_blanco"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/aceptar"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginTop="8dp"
                            android:textColor="@color/letra"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:typeface="robotoBold" />

                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/cancelar"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentLeft="true"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:typeface="robotoBold" />


                        <expansion.neto.com.mx.jefeapp.utils.font.RobotoTextView
                            android:id="@+id/nombreSitioTitulo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="8dp"
                            android:background="@android:color/transparent"
                            android:text="---"
                            android:textColor="@color/azultaco"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/cancelar"
                            app:typeface="robotoRegular" />


                        <expansion.neto.com.mx.jefeapp.utils.font.RobotoTextView
                            android:id="@+id/robotoTextView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="8dp"
                            android:background="@android:color/transparent"
                            android:text="@string/obtuvo"
                            android:textColor="@color/azultaco"
                            android:textSize="12sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/nombreSitioTitulo"
                            app:typeface="robotoRegular" />

                        <LinearLayout
                            android:id="@+id/linearLayout4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="8dp"
                            android:layout_weight="0"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/robotoTextView3">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <expansion.neto.com.mx.jefeapp.utils.font.RobotoTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@android:color/transparent"
                                    android:text="@string/puntos"
                                    android:textColor="@color/azultaco"
                                    android:textSize="12sp"
                                    app:typeface="robotoRegular" />

                                <expansion.neto.com.mx.jefeapp.utils.font.RobotoTextView
                                    android:id="@+id/puntuacion"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="-4dp"
                                    android:background="@android:color/transparent"
                                    tools:text="---"
                                    android:textColor="@color/azultaco"
                                    android:textSize="35sp"
                                    app:typeface="robotoRegular" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/estrella1"
                                        android:layout_width="14dp"
                                        android:layout_height="14dp"
                                        android:src="@drawable/estrella" />

                                    <ImageView
                                        android:id="@+id/estrella2"
                                        android:layout_marginStart="2dp"
                                        android:layout_width="14dp"
                                        android:layout_height="14dp"
                                        android:src="@drawable/estrella" />

                                    <ImageView
                                        android:id="@+id/estrella3"
                                        android:layout_marginStart="2dp"
                                        android:layout_width="14dp"
                                        android:layout_height="14dp"
                                        android:src="@drawable/estrella" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="-10dp"
                                android:layout_weight="1"
                                android:orientation="vertical">


                                <expansion.neto.com.mx.jefeapp.utils.font.RobotoTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@android:color/transparent"
                                    android:text="@string/categoria"
                                    android:textColor="@color/azultaco"
                                    android:textSize="12sp"
                                    app:typeface="robotoRegular" />

                                <expansion.neto.com.mx.jefeapp.utils.font.RobotoTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="-4dp"
                                    android:background="@android:color/transparent"
                                    tools:text="---"
                                    android:id="@+id/categoria"
                                    android:textColor="@color/azultaco"
                                    android:textSize="35sp"
                                    app:typeface="robotoRegular" />


                            </LinearLayout>


                        </LinearLayout>


                        <expansion.neto.com.mx.jefeapp.utils.font.RobotoTextView
                            android:id="@+id/robotoTextView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="8dp"
                            android:background="@android:color/transparent"
                            android:text="@string/direccion"
                            android:textColor="@color/azultaco"
                            android:textSize="12sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
                            app:typeface="robotoRegular" />


                        <expansion.neto.com.mx.jefeapp.utils.font.RobotoTextView
                            android:id="@+id/direccion"
                            android:layout_marginEnd="10dp"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:background="@android:color/transparent"
                            android:textColor="@color/azultaco"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/robotoTextView5"
                            app:typeface="robotoRegular" />



                        <expansion.neto.com.mx.jefeapp.utils.font.RobotoTextView
                            android:id="@+id/estado"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:background="@android:color/transparent"
                            android:textColor="@color/azultaco"
                            android:textSize="12sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/direccion"
                            app:typeface="robotoRegular" />


                        <fragment
                            android:id="@+id/map"
                            android:name="com.google.android.gms.maps.SupportMapFragment"
                            android:layout_width="match_parent"
                            android:layout_height="364dp"
                            android:layout_marginBottom="1dp"
                            android:layout_marginEnd="1dp"
                            android:layout_marginStart="1dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                    </android.support.constraint.ConstraintLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</layout>